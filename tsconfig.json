{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "resolveJsonModule": true,
    "outDir": "lib",
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "paths": {
      "@dwebble/styles": ["src/packages/dwebble-styles/src"]
    }
  }
}
